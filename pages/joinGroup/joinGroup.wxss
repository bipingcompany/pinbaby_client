.joinGroup {
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx 0;
}
.joinGroup .card {
  margin: 0 30rpx;
  padding: 20rpx;
  background: #F8F8FC;
  border-radius: 6rpx;
}
.headCon {
  display: flex;
}
.card .leftImg {
  width: 180rpx;
  height: 108rpx;
  margin: 0 20rpx;
}
.card .title {
  color: #333333;
  font-size: 30rpx;
}
.tag .tagItem {
  background: #FEEEEE;
  color: #FE5858;
  margin-right: 20rpx;
  border-radius:21rpx;
  height: 42rpx;
  line-height: 42rpx;
  padding: 0 14rpx;
  font-size: 24rpx;
}
.priceBtn {
  overflow: hidden;
  margin-top: 24rpx;
}
.price {
  color: #FE5858;
  font-size: 36rpx;
}
.btn {
  float: right;
  width: 200rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 28rpx;
  border-radius: 33rpx;
  background-color: #FE5858;
  color: #FFFFFF;
}
.detail {
  margin-top: 80rpx;
}
.detail .title {
  display: block;
  color: #333333;
  font-size: 40rpx;
  text-align: center;
}
.red {
  color: #FE5858
}
.detail .text {
  display: block;
  color: #999999;
  font-size: 24rpx;
  text-align: center;
}
.shareBtn {
  width: 528rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 60rpx auto 100rpx;
  color: #fff;
  background: #FE5858;
  text-align: center;
  border-radius: 44rpx;
}
.avatorList {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 62rpx;
}
.avatorList .listItem {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 88rpx;
  height: 88rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
  margin-right: 40rpx;
}
.avatorList .listItem:last-child {
  margin-right: 0;
}
.listItem .defaultImg {
  width: 17rpx;
  height: 27rpx;
}
.listItem .avaUrl {
  width:100%;
  height:100%;
  border-radius:50%;
}
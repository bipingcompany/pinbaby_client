.detail {
  background: #fff;
}
.detail .title {
  display: block;
  color: #333333;
  font-size: 40rpx;
  text-align: center;
}
.red {
  color: #FE5858
}
.detail .text {
  display: block;
  color: #999999;
  font-size: 24rpx;
  text-align: center;
}
.shareBtn {
  width: 528rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 60rpx auto 100rpx;
  color: #fff;
  background: #FE5858;
  text-align: center;
  border-radius: 44rpx;
}
.activityCon {
  margin: 0 70rpx;
  border-top: 1px solid #ECECEC;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #666;
}
.moreBtn {
  width: 528rpx;
  height: 88rpx;
  margin: 152rpx auto 0;
  line-height: 88rpx;
  border: 1px solid #FE5858;
  color: #FE5858;
  text-align: center;
  border-radius: 44rpx;
}
.avatorList {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 62rpx;
}
.avatorList .listItem {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 88rpx;
  height: 88rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
  margin-right: 40rpx;
}
.avatorList .listItem:last-child {
  margin-right: 0;
}
.listItem .defaultImg {
  width: 17rpx;
  height: 27rpx;
}
.listItem .avaUrl {
  width:100%;
  height:100%;
  border-radius:50%;
}